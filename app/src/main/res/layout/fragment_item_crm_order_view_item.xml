<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/crm_order_client_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:layout_marginStart="@dimen/text_margin_8"
        android:layout_marginTop="@dimen/text_margin_8"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/crm_order_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
        android:id="@+id/crm_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:layout_marginRight="@dimen/text_margin_8"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/crm_order_client_name"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/crm_order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:layout_marginRight="@dimen/text_margin_8"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/crm_order_client_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/crm_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:layout_marginRight="@dimen/text_margin_8"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/crm_order_summary"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/crm_order_client_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_8"
        android:layout_marginLeft="@dimen/text_margin_8"
        android:layout_marginTop="@dimen/text_margin_16"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crm_order_date"

        android:textAppearance="?attr/textAppearanceListItem"/>






</android.support.constraint.ConstraintLayout>