<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- left side of the recycler view item in LTR layout-->

    <TextView
        android:id="@+id/page_sale_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:layout_marginStart="@dimen/text_margin_8"
        android:layout_marginTop="@dimen/text_margin_8"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/page_sale_quantity1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/page_sale_BCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_8"
        android:layout_marginTop="@dimen/text_margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_sale_Name" />

    <!-- right side of the recycler view item in LTR layout-->

    <TextView
        android:id="@+id/page_sale_quantity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/page_sale_Name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/page_sale_quantity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_8"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/page_sale_BCode"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>