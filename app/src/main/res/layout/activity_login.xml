<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <android.support.constraint.Guideline
        android:id="@+id/login_activity_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <EditText
        android:id="@+id/login_activity_username_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/login_activity_guideline4"
        app:layout_constraintStart_toStartOf="@+id/login_activity_guideline3"
        app:layout_constraintTop_toTopOf="@+id/login_activity_guideline2" />

    <EditText
        android:id="@+id/login_activity_password_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/login_activity_guideline4"
        app:layout_constraintStart_toStartOf="@+id/login_activity_guideline3"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_username_edit_text" />

    <Button
        android:id="@+id/login_activity_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/login_cancel_button_text"
        app:layout_constraintEnd_toStartOf="@+id/login_activity_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_password_edit_text" />

    <Button
        android:id="@+id/login_activity_sign_in_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/login_sign_in_button_text"
        app:layout_constraintStart_toStartOf="@+id/login_activity_guideline1"
        app:layout_constraintTop_toBottomOf="@+id/login_activity_password_edit_text" />

    <android.support.constraint.Guideline
        android:id="@+id/login_activity_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <android.support.constraint.Guideline
        android:id="@+id/login_activity_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/login_activity_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />
</android.support.constraint.ConstraintLayout>