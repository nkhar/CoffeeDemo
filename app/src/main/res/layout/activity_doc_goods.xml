<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout_activity_doc_goods"
    tools:context="android.apex.ge.coffee.DocGoodsActivity" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_for_doc_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_drawer_machine_text_view_text"
        android:layout_gravity="center_horizontal|center_vertical"
        android:scrollbars="vertical" />


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout_doc_goods_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_doc_goods_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>



    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

</android.support.design.widget.CoordinatorLayout>