<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.apex.ge.coffee">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CoffeeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CoffeeMachineDetailActivity"
            android:label="@string/title_activity_coffee_machine_detail"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".PreOrderActivity"
            android:label="@string/title_activity_pre_order"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DocGoodsActivity"
            android:label="@string/title_activity_doc_goods"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>